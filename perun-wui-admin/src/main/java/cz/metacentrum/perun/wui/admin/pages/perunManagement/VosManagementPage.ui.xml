<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p="urn:import:cz.metacentrum.perun.wui.widgets"
		>

	<ui:style>
		.margin{ margin-top: 5px; margin-bottom: 5px; }
		.notBlock { display: inline-block !important; }
		.button { margin-bottom: 2px; }
	</ui:style>

	<b.html:Div>

		<b:Heading size="H2" ui:field="pageTitle">
			<b:Icon ui:field="icon" type="BUILDING" fixedWidth="true" pull="LEFT" />
			<b.html:Text text="Virtual organizations"/>
			<b.html:Small text=""/>
		</b:Heading>

		<b:ButtonToolBar addStyleNames="{style.margin}" ui:field="menu">

			<b:ButtonGroup>
				<b:TextBox placeholder="Filer by VO name" focus="true" autoComplete="false" width="250px" addStyleNames="{style.notBlock}" ui:field="textBox"/>
			</b:ButtonGroup>

			<b:ButtonGroup>
				<p:PerunButton icon="FILTER" type="PRIMARY" addStyleNames="{style.button}">Filter</p:PerunButton>
			</b:ButtonGroup>
			<b:ButtonGroup>
				<p:PerunButton type="SUCCESS" icon="PLUS_CIRCLE" addStyleNames="{style.button}" ui:field="button">New...</p:PerunButton>
			</b:ButtonGroup>
			<b:ButtonGroup>
				<p:PerunButton type="DANGER" icon="TRASH_O" addStyleNames="{style.button}" ui:field="remove">Remove</p:PerunButton>
			</b:ButtonGroup>
			<b:ButtonGroup>
				<p:PerunButton dataToggle="DROPDOWN" text="Growl" icon="ASTERISK"/>
				<b:DropDownMenu>
					<b:AnchorListItem ui:field="growl1">Growl - info</b:AnchorListItem>
					<b:AnchorListItem ui:field="growl2">Growl - warning</b:AnchorListItem>
					<b:AnchorListItem ui:field="growl3">Growl - danger</b:AnchorListItem>
					<b:AnchorListItem ui:field="growl4">Growl - success</b:AnchorListItem>
				</b:DropDownMenu>
			</b:ButtonGroup>
		</b:ButtonToolBar>

		<p:PerunDataGrid condensed="true" striped="true" hover="true" ui:field="grid"/>

	</b.html:Div>

</ui:UiBinder>