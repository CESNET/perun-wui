<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p="urn:import:cz.metacentrum.perun.wui.widgets"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
		>

	<ui:style>
	</ui:style>

	<b.html:Div>

		<b:Heading size="H2" ui:field="pageTitle">
			<b:Icon ui:field="icon" type="BUILDING" fixedWidth="true" pull="LEFT" />
			<b.html:Text text="Virtual organizations"/>
			<b.html:Small text=""/>
		</b:Heading>

		<p:PerunToolbar ui:field="menu">

			<b:InputGroup addStyleNames="col-md-3">
				<p:SuggestBox focus="true" ui:field="textBox" placeholder="Filter by VO name"/>
			</b:InputGroup>

			<b:ButtonGroup>
				<p:PerunButton icon="FILTER" type="PRIMARY" ui:field="filterButton">Filter</p:PerunButton>
			</b:ButtonGroup>
			<b:ButtonGroup>
				<p:PerunButton type="SUCCESS" icon="PLUS_CIRCLE" ui:field="button">New...</p:PerunButton>
			</b:ButtonGroup>
			<b:ButtonGroup>
				<p:PerunButton type="DANGER" icon="TRASH_O" ui:field="remove">Remove</p:PerunButton>
			</b:ButtonGroup>
			<b:ButtonGroup>
				<p:PerunButton dataToggle="DROPDOWN" text="Growl" icon="ASTERISK"/>
				<b:DropDownMenu>
					<b:AnchorListItem ui:field="growl1">Growl - info</b:AnchorListItem>
					<b:AnchorListItem ui:field="growl2">Growl - warning</b:AnchorListItem>
					<b:AnchorListItem ui:field="growl3">Growl - danger</b:AnchorListItem>
					<b:AnchorListItem ui:field="growl4">Growl - success</b:AnchorListItem>
				</b:DropDownMenu>
			</b:ButtonGroup>

			<!--
			<b:ButtonGroup>
				<p:PerunButton type="SUCCESS" icon="PLUS_CIRCLE" ui:field="addMember">Add member</p:PerunButton>
			</b:ButtonGroup>
			<b:ButtonGroup>
				<p:PerunButton type="DANGER" icon="MINUS_CIRCLE" ui:field="removeMember">Remove member</p:PerunButton>
			</b:ButtonGroup>
			-->

		</p:PerunToolbar>

		<p:PerunDataGrid condensed="true" striped="true" hover="true" ui:field="grid"/>

	</b.html:Div>

</ui:UiBinder>