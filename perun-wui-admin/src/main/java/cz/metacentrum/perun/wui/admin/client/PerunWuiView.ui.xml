<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui' xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:cz.metacentrum.perun.wui.widgets'
             xmlns:p.client='urn:import:cz.metacentrum.perun.wui.admin.client'
             xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui">

	<ui:with field="res" type="cz.metacentrum.perun.wui.admin.client.resources.PerunWuiAdminResources"/>

	<ui:style>
		.minSize { /*min-width: 1200px; min-height: 700px; width: 100%; height: 100%; padding: 0px; margin: 0px;*/ }
		.minWidthMenu { /*min-width: 250px; min-height: 700px;*/ }
		.minWidthTop { /*min-width: 1200px; margin-bottom: 10px;*/ }
	</ui:style>

	<b.html:Div addStyleNames="{style.minSize} {res.gss.webContent}">

		<b:Navbar ui:field="navbar" addStyleNames=""/>

		<b.html:Div addStyleNames="{res.gss.menuAndPageWrapper}">

			<b.html:Div ui:field="menu" width="250px" marginBottom="10" addStyleNames="" pull="LEFT" />

			<b.html:Div ui:field="pageContent" marginRight="10"  addStyleNames="{res.gss.pageWrapper}" pull="RIGHT" />

		</b.html:Div>


		<!--
		<p.client:ContentManager ui:field="content" marginRight="10" addStyleNames="{style.content}" pull="RIGHT" />
		-->
	</b.html:Div>

</ui:UiBinder>