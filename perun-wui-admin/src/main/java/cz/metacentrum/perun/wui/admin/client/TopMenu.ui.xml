<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'>

	<ui:style>
		.mystyle { padding-right: 15px; }
		.bottom { border-radius: 0px !important; }
		.head img { padding-left: 15px; }
		.minWidthTop { min-width: 1200px; margin-bottom: 0px !important; }
	</ui:style>

	<b:Navbar ui:field="navbar" addStyleNames="{style.bottom} {style.minWidthTop}">
		<b:NavbarHeader ui:field="navbarHeader" addStyleNames="{style.head}">
			<b:NavbarCollapseButton dataTarget="#navbar-collapse" />
		</b:NavbarHeader>

		<b:NavbarCollapse b:id="navbar-collapse">

			<b:NavbarNav addStyleNames="{style.mystyle}" pull="RIGHT">

				<b:AnchorListItem ui:field="signout" icon="SIGN_OUT" pull="RIGHT" iconSize="LARGE"></b:AnchorListItem>

				<b:AnchorListItem ui:field="settings" icon="GEAR" pull="RIGHT" iconSize="LARGE"></b:AnchorListItem>

				<b:ListDropDown pull="RIGHT">
					<b:AnchorButton dataToggle="DROPDOWN" icon="USER" iconSize="LARGE">Mgr. Pavel Zl√°mal
					</b:AnchorButton>
					<b:DropDownMenu>
						<b:AnchorListItem icon="EXTERNAL_LINK" iconPosition="RIGHT">Profile</b:AnchorListItem>
						<b:AnchorListItem icon="EXTERNAL_LINK" iconPosition="RIGHT">Publications</b:AnchorListItem>
						<b:AnchorListItem icon="EXTERNAL_LINK" iconPosition="RIGHT">Registrations</b:AnchorListItem>
						<b:AnchorListItem icon="EXTERNAL_LINK" iconPosition="RIGHT" >Identity consolidation</b:AnchorListItem>
					</b:DropDownMenu>
				</b:ListDropDown>

				<b:AnchorListItem ui:field="help" pull="RIGHT" icon="QUESTION_CIRCLE" iconSize="LARGE"/>

				<b:AnchorListItem ui:field="refresh" pull="RIGHT" icon="REFRESH" iconSize="LARGE" />

			</b:NavbarNav>

		</b:NavbarCollapse>

	</b:Navbar>
</ui:UiBinder>