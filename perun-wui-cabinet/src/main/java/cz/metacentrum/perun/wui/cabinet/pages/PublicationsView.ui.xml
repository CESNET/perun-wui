<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
			 xmlns:p='urn:import:cz.metacentrum.perun.wui.widgets'
>

	<ui:with field="res" type="cz.metacentrum.perun.wui.cabinet.client.resources.PerunCabinetResources"/>

	<b.html:Div>

		<b:Heading size="H2" ui:field="pageTitle">
			<b:Icon ui:field="icon" type="BUILDING_O" fixedWidth="true" />
			<b.html:Text text="" ui:field="text"/>
			<b.html:Small text="" ui:field="small"/>
		</b:Heading>

		<p:PerunLoader ui:field="loader" />

		<b.html:Div ui:field="page" paddingTop="20">
			<b:Row paddingBottom="10">
				<b:Column size="SM_4" ui:field="nameLabel"  />
				<b:Column size="SM_8" >
					<b.html:Text ui:field="nameData" />
				</b:Column>
			</b:Row>
			<b:Row paddingBottom="10">
				<b:Column size="SM_4" ui:field="orgLabel" />
				<b:Column size="SM_8" >
					<b.html:Text ui:field="orgData" />
				</b:Column>
			</b:Row>

		</b.html:Div>

		<!--
		<g:ResizeLayoutPanel addStyleNames="{res.gss.grid}">

			<p:PerunDataGrid condensed="true" striped="true" hover="true" width="100%" ui:field="grid" />

		</g:ResizeLayoutPanel>
		-->

	</b.html:Div>

</ui:UiBinder>