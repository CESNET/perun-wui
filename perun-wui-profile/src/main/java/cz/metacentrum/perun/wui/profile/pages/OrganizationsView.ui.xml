<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p='urn:import:cz.metacentrum.perun.wui.widgets'
>

	<ui:with field="res" type="cz.metacentrum.perun.wui.profile.client.resources.PerunProfileResources"/>

	<b.html:Div addStyleNames="{res.gss.page}">

		<b:Heading size="H2" ui:field="pageTitle">
			<b:Icon ui:field="icon" type="BUILDING_O" fixedWidth="true" />
			<b.html:Text text="" ui:field="text"/>
			<b.html:Small text="" ui:field="small"/>
		</b:Heading>

		<p:PerunLoader ui:field="loader" />

		<b:Alert text="You are member of following virtual organizations. Click to name to see details." ui:field="paragraph" type="INFO" dismissable="true"/>

		<b.html:Div ui:field="page">

		</b.html:Div>

		<!--

		<g:ResizeLayoutPanel addStyleNames="{res.gss.grid}">

			<p:PerunDataGrid condensed="true" striped="true" hover="true" width="100%" ui:field="grid" />

		</g:ResizeLayoutPanel>
		-->

	</b.html:Div>

</ui:UiBinder>