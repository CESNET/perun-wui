<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:p='urn:import:cz.metacentrum.perun.wui.widgets' >

	<ui:style>
		.loader {
			position: absolute;
			top: 35%;
			left: 30%;
			right: 50%;
		}
		.alert {
			position: absolute;
			top: 40%;
			left: 30%;
			right: 50%;
		}
		.marginTop {
			margin-top: 15px;
		}
	</ui:style>

	<b:Container fluid="true" height="100%">
		<b:Row height="100%">

				<b:Progress width="40%" active="true" type="STRIPED" addStyleNames="{style.loader}">
					<b:ProgressBar ui:field="bar" />
				</b:Progress>

			<b:Alert dismissable="false" ui:field="alert" width="40%" type="DANGER" addStyleNames="{style.alert}">

				<b:ButtonToolBar visible="false" ui:field="tool" addStyleNames="{style.marginTop}">
					<p:PerunButton ui:field="retry" icon="REFRESH" pull="LEFT">Try again</p:PerunButton>
					<p:PerunButton ui:field="report" icon="BUG" pull="RIGHT" type="DANGER">Report error</p:PerunButton>
				</b:ButtonToolBar>

			</b:Alert>

		</b:Row>
	</b:Container>

</ui:UiBinder>