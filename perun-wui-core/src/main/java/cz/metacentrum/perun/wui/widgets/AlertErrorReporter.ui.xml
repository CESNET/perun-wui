<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p='urn:import:cz.metacentrum.perun.wui.widgets' >

	<ui:with field='tran' type='cz.metacentrum.perun.wui.client.resources.PerunTranslation'/>

	<ui:style>
		.top {
			margin-top: 10px;
		}
	</ui:style>

	<b:Alert dismissable="false" ui:field="alert" type="DANGER" >
		<g:HTML ui:field="html" />
		<b:ButtonToolBar addStyleNames="{style.top}" visible="false">
			<p:PerunButton ui:field="retry"  icon="REFRESH" pull="LEFT"  visible="false">
				<ui:text from="{tran.tryAgain}" />
			</p:PerunButton>
			<p:PerunButton ui:field="report" icon="BUG"     pull="RIGHT" visible="false" type="DANGER">
				<ui:text from="{tran.reportError}" />
			</p:PerunButton>
		</b:ButtonToolBar>
	</b:Alert>

</ui:UiBinder>