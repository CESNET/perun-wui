<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='PerunWui'>

    <!-- Inherit the core Web Toolkit stuff. -->
    <inherits name='com.google.gwt.user.User'/>

    <!-- Other module inherits -->
    <inherits name="com.google.gwt.http.HTTP"/>
    <inherits name="com.google.gwt.json.JSON"/>
    <inherits name="com.google.gwt.resources.Resources"/>

	<!-- support GWT Bootstrap 3 with Bootstrap2 look-alike theme -->
	<inherits name="org.gwtbootstrap3.GwtBootstrap3NoTheme"/>
	<!-- support for GWT Bootstrap 3 in IE 8 -->
	<inherits name="org.gwtbootstrap3.extras.respond.Respond"/>
	<!-- support for Gwt Bootstrap 3 notifications -->
	<inherits name="org.gwtbootstrap3.extras.growl.Growl"/>
	<!-- support for Gwt Bootstrap 3 nice selections -->
	<inherits name="org.gwtbootstrap3.extras.select.Select"/>

    <!-- Mask compilation error messages for unsupported browsers -->
    <set-configuration-property name="user.agent.runtimeWarning" value="false"/>

    <!--  Support only these browsers for devel -->
    <set-property name="user.agent" value="gecko1_8" />	<!-- FF -->
    <extend-property name="user.agent" values="safari" /> <!-- CHROME -->
    <extend-property name="user.agent" values="ie8" /> <!-- IE 8 -->
    <extend-property name="user.agent" values="ie9" /> <!-- IE 9 -->
    <extend-property name="user.agent" values="ie10" /> <!--  IE 10 -->
    <extend-property name="user.agent" values="opera" /> <!-- OPERA -->

    <!-- Specify the paths for translatable code -->
    <source path='client'/>
    <source path='json'/>
    <source path='model'/>
    <source path='pages'/>
    <source path='widgets'/>

    <add-linker name="xsiframe"/>

</module>