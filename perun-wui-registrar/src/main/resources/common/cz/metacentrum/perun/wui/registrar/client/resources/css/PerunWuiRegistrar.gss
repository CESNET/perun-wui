
@def MIN_WIDTH 320px;
@def MIN_HEIGHT 320px;

/* MAIN LAYOUT */

body {
    position: absolute;
    min-width: MIN_WIDTH;
    min-height: MIN_HEIGHT;
    width: 100%;
    height: 100%;
}

.webContent {
    position: absolute;
    height: 100%;
    width: 100%;

    display: flex;
    flex-direction: column;
    align-items: stretch;
}

.header {

}
.header img {
    padding-left: 15px;
    padding-right: 15px;
}

.footer {
	padding: 4px;
	background-color: #F8F8F8;
	border-top: 1px solid #e7e7e7;
}

.pageWrapper {
    display: flex;
    flex-direction: column;
    align-items: stretch;

    flex-grow: 1;

    margin: 60px 15px 0px 15px;
}
.page {
    display: flex;
    flex-direction: column;
    align-items: stretch;

    flex-grow: 1;
}

.pageHeader {

}

.grid {
    flex-grow: 1;

    margin-bottom: 10px;
    overflow-x: auto;
}
.grid > div:last-child {
    min-width: 767px;
}


/* HACKS */

/* correctly animatable status (because of pulse animation) */
.status {
    display: inline-block;
}

/* LOOK */
.preview {
    margin: 0px;
    height: auto;
    min-height: 34px;
}
.preview i {
    margin-top: 2px;
}

@external checkbox;
.preview .checkbox label {
    cursor: default;
}
.preview .checkbox label > span {
    cursor: text;
}
