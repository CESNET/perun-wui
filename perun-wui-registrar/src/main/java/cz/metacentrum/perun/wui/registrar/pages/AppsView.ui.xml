<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p='urn:import:cz.metacentrum.perun.wui.widgets'
		>

	<ui:with field="res" type="cz.metacentrum.perun.wui.registrar.client.resources.PerunWuiRegistrarResources"/>

	<ui:style>
	</ui:style>

	<b.html:Div addStyleNames="{res.gss.page}">

		<b:Heading size="H2" ui:field="pageTitle" addStyleNames="{res.gss.pageHeader}">
			<b:Icon ui:field="icon" type="ARCHIVE" fixedWidth="true" />
			<b.html:Text text="My registrations" ui:field="text"/>
			<b.html:Small text=""/>
		</b:Heading>

		<g:ResizeLayoutPanel addStyleNames="{res.gss.grid}">

			<p:PerunDataGrid condensed="true" striped="true" hover="true" width="100%" ui:field="grid" />

		</g:ResizeLayoutPanel>

	</b.html:Div>

</ui:UiBinder>