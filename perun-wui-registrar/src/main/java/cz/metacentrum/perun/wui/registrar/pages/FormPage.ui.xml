<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p='urn:import:cz.metacentrum.perun.wui.registrar.widgets'
		>

	<ui:style>
		.top { padding-top: 60px; }
		.right { padding-right: 20px; }
	</ui:style>

	<b.html:Div>

		<b:Navbar position="FIXED_TOP">
			<b:NavbarHeader>
				<b:NavbarBrand>Perun registrar</b:NavbarBrand>
				<b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
			</b:NavbarHeader>

			<b:NavbarCollapse b:id="navbar-collapse">
				<b:NavbarNav>
					<b:AnchorListItem icon="FILE_O" ui:field="application">Registration form</b:AnchorListItem>
					<b:AnchorListItem icon="COPY" ui:field="myApplications">My registrations</b:AnchorListItem>
					<b:AnchorListItem icon="QUESTION_CIRCLE" ui:field="help">Help</b:AnchorListItem>
					<!--<b:AnchorListItem ui:field="czech" icon="FLAG">ÄŒesky</b:AnchorListItem>-->
					<b:AnchorListItem ui:field="english" icon="FLAG">English</b:AnchorListItem>
					<b:AnchorListItem icon="SIGN_OUT" ui:field="logout">Logout</b:AnchorListItem>
				</b:NavbarNav>
			</b:NavbarCollapse>
		</b:Navbar>

		<b:Form type="HORIZONTAL" addStyleNames="{style.top}">
			<p:PerunForm ui:field="form">

			</p:PerunForm>
		</b:Form>


	</b.html:Div>

</ui:UiBinder>