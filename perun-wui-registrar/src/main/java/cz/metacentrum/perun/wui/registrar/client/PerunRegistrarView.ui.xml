<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui' xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p.client='urn:import:cz.metacentrum.perun.wui.registrar.client'
		>

	<ui:with field="res" type="cz.metacentrum.perun.wui.registrar.client.resources.PerunWuiRegistrarResources"/>

	<ui:style>
	</ui:style>

	<ui:with field="placeTokens" type="cz.metacentrum.perun.wui.registrar.client.RegistrarPlaceTokens"/>

	<b.html:Div addStyleNames="{res.gss.webContent}">

		<b:Navbar position="FIXED_TOP">
			<b:NavbarHeader ui:field="navbarHeader" addStyleNames="{res.gss.header}">
				<b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
			</b:NavbarHeader>

			<b:NavbarCollapse b:id="navbar-collapse">
				<b:NavbarNav>
					<b:AnchorListItem icon="FILE_TEXT_O" ui:field="application" targetHistoryToken="{placeTokens.getForm}">Registration form</b:AnchorListItem>
					<b:AnchorListItem icon="ARCHIVE" ui:field="myApplications" targetHistoryToken="{placeTokens.getMyApps}">My registrations</b:AnchorListItem>
					<b:AnchorListItem icon="QUESTION_CIRCLE" ui:field="help" targetHistoryToken="{placeTokens.getHelp}">Help</b:AnchorListItem>
					<b:ListDropDown>
						<b:AnchorButton icon="FLAG" dataToggle="DROPDOWN" ui:field="language">Language</b:AnchorButton>
						<b:DropDownMenu>
							<b:AnchorListItem ui:field="english" iconPosition="RIGHT">English</b:AnchorListItem>
							<b:AnchorListItem ui:field="czech" iconPosition="RIGHT">Czech</b:AnchorListItem>
						</b:DropDownMenu>
					</b:ListDropDown>
					<b:AnchorListItem icon="SIGN_OUT" ui:field="logout" targetHistoryToken="{placeTokens.getLogout}">Logout</b:AnchorListItem>
				</b:NavbarNav>
			</b:NavbarCollapse>
		</b:Navbar>

		<b.html:Div ui:field="pageContent" addStyleNames="{res.gss.pageWrapper}" />

	</b.html:Div>

</ui:UiBinder>