<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui' xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p.client='urn:import:cz.metacentrum.perun.wui.registrar.client'
		>

	<ui:style>
		.header img { padding-left: 15px; padding-right: 15px; }

	</ui:style>

	<b:Container fluid="true">

		<b:Navbar position="FIXED_TOP">
			<b:NavbarHeader ui:field="navbarHeader" addStyleNames="{style.header}">
				<b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
			</b:NavbarHeader>

			<b:NavbarCollapse b:id="navbar-collapse">
				<b:NavbarNav>
					<b:AnchorListItem icon="FILE_TEXT_O" ui:field="application" targetHistoryToken="form">Registration form</b:AnchorListItem>
					<b:AnchorListItem icon="ARCHIVE" ui:field="myApplications" targetHistoryToken="submitted">My registrations</b:AnchorListItem>
					<b:AnchorListItem icon="QUESTION_CIRCLE" ui:field="help" targetHistoryToken="help">Help</b:AnchorListItem>
					<b:ListDropDown>
						<b:AnchorButton icon="FLAG" dataToggle="DROPDOWN" ui:field="language">Language</b:AnchorButton>
						<b:DropDownMenu>
							<b:AnchorListItem ui:field="english" iconPosition="RIGHT">English</b:AnchorListItem>
							<b:AnchorListItem ui:field="czech" iconPosition="RIGHT">Czech</b:AnchorListItem>
						</b:DropDownMenu>
					</b:ListDropDown>
					<b:AnchorListItem icon="SIGN_OUT" ui:field="logout" targetHistoryToken="logout">Logout</b:AnchorListItem>
				</b:NavbarNav>
			</b:NavbarCollapse>
		</b:Navbar>

		<b:Column size="MD_12" marginTop="60">
			<p.client:RegistrarContentManager ui:field="content"/>
		</b:Column>

	</b:Container>

</ui:UiBinder>