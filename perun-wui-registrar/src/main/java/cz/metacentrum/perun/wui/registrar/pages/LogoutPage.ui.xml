<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
		>

	<ui:style>
		.center { text-align: center; margin-top: 20px; }
	</ui:style>

	<b.html:Div>

		<b.html:Div ui:field="loader" addStyleNames="{style.center}">

			<b:Icon type="SPINNER" size="TIMES4" spin="true" />

		</b.html:Div>

		<b.html:Div ui:field="content">

			<b:Heading size="H2" ui:field="pageTitle" alignment="CENTER">
				<b:Icon ui:field="icon" type="INFO_CIRCLE" fixedWidth="true" />
				<b.html:Text text="You have been logged out." ui:field="text"/>
				<b.html:Small text=""/>
			</b:Heading>

			<b:Heading size="H2" alignment="CENTER">
				<b.html:Text text=""/>
				<b.html:Small text="Please close the browser window." ui:field="subText"/>
			</b:Heading>

			<b.html:Div addStyleNames="{style.center}">

				<b:Button ui:field="button" text="Log me back" icon="CHEVRON_LEFT" iconPosition="LEFT" iconFixedWidth="true" type="SUCCESS" addStyleNames="{style.center}"/>

			</b.html:Div>

		</b.html:Div>

	</b.html:Div>

</ui:UiBinder>