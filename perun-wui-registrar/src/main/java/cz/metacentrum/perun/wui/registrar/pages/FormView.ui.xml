<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p='urn:import:cz.metacentrum.perun.wui.registrar.widgets'
		>

	<ui:with field="res" type="cz.metacentrum.perun.wui.registrar.client.resources.PerunWuiRegistrarResources"/>

	<ui:style>
	</ui:style>

	<b.html:Div addStyleNames="{res.gss.page}">

		<b:Container fluid="true">
			<b:Row>
				<b:Column size="MD_12">

					<b:Image visible="false" ui:field="logo"/>

					<b:Alert visible="false" type="WARNING" ui:field="notice" dismissable="false" marginTop="20"/>

					<b:Form type="HORIZONTAL">
						<p:PerunForm ui:field="form">

						</p:PerunForm>
					</b:Form>

				</b:Column>
			</b:Row>
		</b:Container>

	</b.html:Div>

</ui:UiBinder>