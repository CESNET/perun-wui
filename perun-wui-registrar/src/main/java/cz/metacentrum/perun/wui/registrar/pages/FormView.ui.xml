<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p='urn:import:cz.metacentrum.perun.wui.registrar.widgets'
			 xmlns:p.core='urn:import:cz.metacentrum.perun.wui.widgets'
		>

	<ui:with field="res" type="cz.metacentrum.perun.wui.registrar.client.resources.PerunRegistrarResources"/>

	<ui:style>
	</ui:style>

	<b.html:Div>

		<b:Container>
			<b:Row>
				<b:Column size="MD_12">

					<b:Image visible="false" ui:field="logo"/>

					<p.core:AlertErrorReporter visible="false" type="WARNING" ui:field="notice" marginTop="20"/>

					<b:Alert type="WARNING" visible="false" ui:field="mailVerificationAlert">
						<b.html:Paragraph ui:field="mailVerificationText" marginBottom="10"/>
						<p.core:PerunToolbar>
							<p.core:PerunButton ui:field="resendNotification" type="WARNING" iconFixedWidth="true" icon="ENVELOPE"/>
						</p.core:PerunToolbar>
					</b:Alert>
					<p.core:AlertErrorReporter visible="false" type="WARNING" ui:field="mailVerificationNotice" marginTop="20" />

					<b:Form type="HORIZONTAL">
						<p:PerunForm ui:field="form">

						</p:PerunForm>
					</b:Form>

				</b:Column>
			</b:Row>
		</b:Container>

	</b.html:Div>

</ui:UiBinder>
