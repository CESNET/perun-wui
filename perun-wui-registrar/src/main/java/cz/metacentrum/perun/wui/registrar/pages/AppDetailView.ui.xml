<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p='urn:import:cz.metacentrum.perun.wui.widgets'
             xmlns:p.registrar='urn:import:cz.metacentrum.perun.wui.registrar.widgets'
		>

	<ui:style>
	</ui:style>

	<b.html:Div>

		<b:Heading size="H2" ui:field="pageTitle">
			<b:ButtonGroup>
				<p:PerunButton type="DEFAULT" icon="CHEVRON_LEFT" ui:field="backButton" marginRight="10" marginBottom="5"></p:PerunButton>
			</b:ButtonGroup>
			<b:Icon ui:field="icon" type="FILE_TEXT_O" fixedWidth="true" />
			<b.html:Text text="Registration detail" ui:field="text"/>
			<b.html:Small text="" />
		</b:Heading>

		<b:Alert ui:field="state">
			<b:Description horizontal="true" marginBottom="0">
				<b:DescriptionTitle ui:field="subTitle"></b:DescriptionTitle>
				<b:DescriptionData  ui:field="subData"></b:DescriptionData>
				<b:DescriptionTitle ui:field="stateTitle"></b:DescriptionTitle>
				<b:DescriptionData ui:field="stateText"></b:DescriptionData>
			</b:Description>
			<!--
			<b.html:Strong text="" ui:field="subTitle"/>
			<b.html:Italic text="" ui:field="subData"/>
			<b.html:ClearFix/>
			<b.html:Strong text="" ui:field="stateTitle"/>
			<b.html:Italic text="" ui:field="stateText"/>
			-->
		</b:Alert>

		<b:Heading size="H3" text="Form data" ui:field="formTitle"/>

		<b:Form type="HORIZONTAL">
			<p.registrar:PerunForm ui:field="form">

			</p.registrar:PerunForm>
		</b:Form>

	</b.html:Div>

</ui:UiBinder>