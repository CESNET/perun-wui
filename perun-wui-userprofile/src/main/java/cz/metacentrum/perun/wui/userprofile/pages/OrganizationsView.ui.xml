<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p='urn:import:cz.metacentrum.perun.wui.widgets'
>

	<ui:with field="res" type="cz.metacentrum.perun.wui.userprofile.client.resources.UserProfileResources"/>

	<b.html:Div addStyleNames="{res.gss.page}">

		<b:Heading size="H2" ui:field="pageTitle">
			<b:Icon ui:field="icon" type="USER" fixedWidth="true" />
			<b.html:Text text="" ui:field="text"/>
			<b.html:Small text="" ui:field="small"/>
		</b:Heading>

		<p:PerunLoader ui:field="loader" />

		<b.html:Paragraph text="You are member of following organizations. You can extend your membership using 'Extend' button." ui:field="paragraph" />

		<g:ResizeLayoutPanel addStyleNames="{res.gss.grid}">

			<p:PerunDataGrid condensed="true" striped="true" hover="true" width="100%" ui:field="grid" />

		</g:ResizeLayoutPanel>

	</b.html:Div>

</ui:UiBinder>