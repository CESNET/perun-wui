<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui' xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
             xmlns:p.client='urn:import:cz.metacentrum.perun.wui.registrar.client'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
>

	<ui:style>
		/* Ugly hack for row/column since they overlap page when set to 100% */
		.localFix { padding-right: 0; margin-right: 0; }
	</ui:style>

	<ui:with field="res" type="cz.metacentrum.perun.wui.userprofile.client.resources.UserProfileResources"/>

	<ui:with field="placeTokens" type="cz.metacentrum.perun.wui.userprofile.client.UserProfilePlaceTokens"/>

	<b.html:Div addStyleNames="{res.gss.webContent}">

		<!-- TOP MENU -->
		<b:Row addStyleNames="{style.localFix}">
			<b:Column size="MD_12" addStyleNames="{style.localFix}">
				<b:Navbar position="DEFAULT">
					<b:NavbarHeader ui:field="navbarHeader" addStyleNames="{res.gss.header}">
						<b.html:Span ui:field="brand" addStyleNames="navbar-brand" />
						<b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
					</b:NavbarHeader>

					<b:NavbarCollapse b:id="navbar-collapse" ui:field="collapse">

						<g:FocusPanel ui:field="collapseClickHandler" >
							<b:NavbarNav>
								<b:AnchorListItem ui:field="topMenuMyProfile" active="true" icon="HOME" iconSize="LARGE" targetHistoryToken="{placeTokens.getPersonal}" visibleOn="SM_MD_LG" />

								<b:AnchorListItem visibleOn="XS" ui:field="personalXS" icon="HOME" iconFixedWidth="true" targetHistoryToken="{placeTokens.getPersonal}" >Personal</b:AnchorListItem>
								<b:AnchorListItem visibleOn="XS" ui:field="organizationsXS" icon="BUILDING_O" iconFixedWidth="true" targetHistoryToken="{placeTokens.getOrganizations}">My virtual organizations</b:AnchorListItem>
								<b:AnchorListItem visibleOn="XS" ui:field="identitiesXS" icon="EYE" iconFixedWidth="true" targetHistoryToken="{placeTokens.getIdentities}">My identities</b:AnchorListItem>
								<b:AnchorListItem visibleOn="XS" ui:field="loginsXS" icon="KEY" iconFixedWidth="true" targetHistoryToken="{placeTokens.getLogins}" text="Logins &amp; Passwords" />
								<b:AnchorListItem visibleOn="XS" ui:field="settingsXS" icon="COG" iconFixedWidth="true" targetHistoryToken="{placeTokens.getSettings}" >Settings</b:AnchorListItem>

								<b:ListDropDown>
									<b:AnchorButton icon="FLAG" iconSize="LARGE" dataToggle="DROPDOWN" ui:field="language">Language</b:AnchorButton>
									<b:DropDownMenu>
										<b:AnchorListItem ui:field="english" iconPosition="RIGHT">English</b:AnchorListItem>
										<b:AnchorListItem ui:field="czech" iconPosition="RIGHT">Czech</b:AnchorListItem>
									</b:DropDownMenu>
								</b:ListDropDown>
								<b:AnchorListItem icon="SIGN_OUT" iconSize="LARGE" ui:field="logout" targetHistoryToken="{placeTokens.getLogout}">Logout</b:AnchorListItem>
							</b:NavbarNav>
						</g:FocusPanel>
					</b:NavbarCollapse>
				</b:Navbar>
			</b:Column>
		</b:Row>

		<!-- CONTENT -->
		<b:Container>
			<b:Row>
				<b:Column size="MD_12" addStyleNames="{res.gss.menuAndPageWrapper}">

					<!-- LEFT MENU -->
					<b.html:Div ui:field="menu" width="250px" marginTop="15" visibleOn="SM_MD_LG" addStyleNames="{res.gss.menu}">

						<b:Panel>
							<b:PanelHeader>
								<b:Heading size="H3">
									<b:Icon type="HOME" fixedWidth="true" />
									<b.html:Text text="MENU" />
								</b:Heading>
							</b:PanelHeader>
							<b:PanelBody>
								<b:NavPills stacked="true" ui:field="menuPills">
									<b:AnchorListItem ui:field="personal" icon="HOME" iconFixedWidth="true" targetHistoryToken="{placeTokens.getPersonal}" >Personal</b:AnchorListItem>
									<b:AnchorListItem ui:field="organizations" icon="BUILDING_O" iconFixedWidth="true" targetHistoryToken="{placeTokens.getOrganizations}">My virtual organizations</b:AnchorListItem>
									<b:AnchorListItem ui:field="identities" icon="EYE" iconFixedWidth="true" targetHistoryToken="{placeTokens.getIdentities}">My identities</b:AnchorListItem>
									<b:AnchorListItem ui:field="logins" icon="KEY" iconFixedWidth="true" targetHistoryToken="{placeTokens.getLogins}" text="Logins &amp; Passwords" />
									<b:AnchorListItem ui:field="settings" icon="COG" iconFixedWidth="true" targetHistoryToken="{placeTokens.getSettings}">Settings</b:AnchorListItem>
								</b:NavPills>
							</b:PanelBody>
						</b:Panel>

					</b.html:Div>

					<!-- PAGE CONTENT -->
					<b:Column size="MD_12" ui:field="pageContent" addStyleNames="{res.gss.pageWrapper}" />

				</b:Column>
			</b:Row>

		</b:Container>

		<!-- FOOTER -->
		<b:Well addStyleNames="{res.gss.footer}">
			<b:Icon type="SUPPORT" paddingRight="5"/>
			<b.html:Span ui:field="footerSupport" /><b.html:ClearFix />
			<b.html:Span ui:field="footerCredits"/><b.html:ClearFix />
			<b.html:Span ui:field="footerVersion"/>
		</b:Well>

	</b.html:Div>

</ui:UiBinder>